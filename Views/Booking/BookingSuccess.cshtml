@using Pegasus_MVC.DTO
@model CreateBookingDto

<div class="success-container">
    <div class="success-card">
        <div class="success-icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="currentColor" viewBox="0 0 16 16">
                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.061L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
            </svg>
        </div>

        <div class="success-header">
            <h1>Booking Confirmed!</h1>
            <p class="success-subtitle">
                Thank you, <strong>@Model.FirstName @Model.LastName</strong>!
            </p>
            <p class="confirmation-text">
                Your booking has been successfully created and a confirmation email has been sent to <strong>@Model.Email</strong>
            </p>
        </div>

        <div class="success-section booking-summary">
            <div class="section-icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" viewBox="0 0 16 16">
                    <path d="M6 .5a.5.5 0 0 1 .5-.5h3a.5.5 0 0 1 0 1H9v1.07a7.001 7.001 0 0 1 3.274 12.474l.601.602a.5.5 0 0 1-.707.708l-.746-.746A6.97 6.97 0 0 1 8 16a6.97 6.97 0 0 1-3.422-.892l-.746.746a.5.5 0 0 1-.707-.708l.602-.602A7.001 7.001 0 0 1 7 2.07V1h-.5A.5.5 0 0 1 6 .5zm2.5 5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5zM.86 5.387A2.5 2.5 0 1 1 4.387 1.86 8.035 8.035 0 0 0 .86 5.387z" />
                </svg>
            </div>
            <h3>Booking Summary</h3>
            <div class="summary-details">
                <div class="summary-row">
                    <span class="label">Pickup:</span>
                    <span class="value">@Model.PickUpDateTime.ToString("yyyy-MM-dd HH:mm")</span>
                </div>
                <div class="summary-row">
                    <span class="label">From:</span>
                    <span class="value">@Model.PickUpAddress</span>
                </div>
                @if (!string.IsNullOrWhiteSpace(Model.FirstStopAddress))
                {
                    <div class="summary-row">
                        <span class="label">Stop 1:</span>
                        <span class="value">@Model.FirstStopAddress</span>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.SecondStopAddress))
                {
                    <div class="summary-row">
                        <span class="label">Stop 2:</span>
                        <span class="value">@Model.SecondStopAddress</span>
                    </div>
                }
                <div class="summary-row">
                    <span class="label">To:</span>
                    <span class="value">@Model.DropOffAddress</span>
                </div>
                @if (!string.IsNullOrEmpty(Model.Flightnumber))
                {
                    <div class="summary-row">
                        <span class="label">Flight:</span>
                        <span class="value">@Model.Flightnumber</span>
                    </div>
                }
                @if (!string.IsNullOrWhiteSpace(Model.Comment))
                {
                    <div class="summary-row">
                        <span class="label">Comment:</span>
                        <span class="value">@Model.Comment</span>
                    </div>
                }
            </div>
        </div>

        <div class="success-footer">
            <div class="next-steps">
                <h4>What's Next?</h4>
                <ul>
                    <li>Check your email for booking confirmation and details</li>
                    <li>Your driver will arrive 10-15 minutes before pickup time</li>
                    <li>You'll receive mail updates about your trip</li>
                    <li>Have a safe and comfortable journey!</li>
                </ul>
            </div>

            <div class="action-buttons">
                <a asp-controller="Home" asp-action="Index" class="btn-home">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path d="m8 3.293 6 6V13.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5V9.293l6-6zm5-.793V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                        <path d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
                    </svg>
                    Back to Home
                </a>
                <a asp-controller="Booking" asp-action="Index" class="btn-new-booking">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                    </svg>
                    New Booking
                </a>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener("DOMContentLoaded", () => {
        sessionStorage.clear();
        localStorage.removeItem("BookingStops");
        sessionStorage.removeItem("StopsCount");
    });
</script>

