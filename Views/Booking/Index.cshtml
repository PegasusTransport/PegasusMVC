@using Pegasus_MVC.ViewModels
@model CreateBookingVM

@{
    ViewData["Title"] = "Book now";
}

<div class="booking-container">
    <div class="booking-card">
        <div class="booking-header">
            <h2 class="h4">Create New Booking</h2>
            <p class="subtitle small">Fill in your details below</p>
        </div>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger py-2">@ViewBag.ErrorMessage</div>
        }

        @if (ViewData.ModelState.ContainsKey("ValidateArlandaRequirement") || ViewData.ModelState.ContainsKey("FlightNumberRequierment"))
        {
            <div class="alert alert-danger py-2 mb-3">
                <strong>Arlanda Requirement:</strong>
                @if (ViewData.ModelState.ContainsKey("ValidateArlandaRequirement"))
                {
                    @ViewData.ModelState["ValidateArlandaRequirement"]?.Errors.First().ErrorMessage
                }
                @if (ViewData.ModelState.ContainsKey("FlightNumberRequierment"))
                {
                    @ViewData.ModelState["FlightNumberRequierment"]?.Errors.First().ErrorMessage
                }
            </div>
        }

        <form asp-controller="Booking" asp-action="Create" method="post" id="bookingForm" class="booking-form">
            <span asp-validation-for="SecStop" class="text-danger small"></span>
            <span asp-validation-for="FirstStop" class="text-danger small"></span>

            <div class="row">
                <div class="col-md-6 mb-2">
                    <label asp-for="FirstName" class="form-label small">First Name</label>
                    <input asp-for="FirstName" class="form-control form-control-sm" placeholder="Enter first name" />
                    <span asp-validation-for="FirstName" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-2">
                    <label asp-for="LastName" class="form-label small">Last Name</label>
                    <input asp-for="LastName" class="form-control form-control-sm" placeholder="Enter last name" />
                    <span asp-validation-for="LastName" class="text-danger small"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-2">
                    <label asp-for="Email" class="form-label small">Email</label>
                    <input asp-for="Email" type="email" class="form-control form-control-sm" placeholder="your@email.com" />
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-2">
                    <label asp-for="PhoneNumber" class="form-label small">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control form-control-sm" placeholder="+46 70-123 45 67" />
                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                </div>
            </div>

            <div class="mb-2">
                <label asp-for="PickUpDateTime" class="form-label small">Pickup Time</label>
                <input asp-for="PickUpDateTime" type="datetime-local" class="form-control form-control-sm" step="300" />
                <span asp-validation-for="PickUpDateTime" class="text-danger small"></span>
            </div>

            <div class="mb-2 justify-content-center align-content-center">
                <div class="trip-toggle-container">
                    <button type="button" class="trip-toggle-btn active" id="toArlandaBtn" onclick="setTripDirection('to')">
                        + To Arlanda
                    </button>
                    <button type="button" class="trip-toggle-btn" id="fromArlandaBtn" onclick="setTripDirection('from')">
                        → From Arlanda
                    </button>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-2">
                    <label asp-for="PickUpAddress" class="form-label small">Pickup Address</label>
                    <div class="position-relative">
                        <input asp-for="PickUpAddress"
                               id="PickUpAddress"
                               class="form-control form-control-sm"
                               placeholder="Street and number"
                               autocomplete="off" />

                        <input asp-for="PickUpAddressPlaceId" type="hidden" id="PickUpAddressPlaceId" />
                        <input asp-for="PickUpLatitude" type="hidden" id="PickUpAddressLatitude" />
                        <input asp-for="PickUpLongitude" type="hidden" id="PickUpAddressLongitude" />
                        <div id="PickUpAddress-suggestions"
                             class="address-suggestions list-group"
                             style="display: none;">
                        </div>
                    </div>
                    <span asp-validation-for="PickUpAddress" class="text-danger small"></span>
                </div>
                <div class="col-md-6 mb-2">
                    <label asp-for="DropOffAddress" class="form-label small">Drop-off Address</label>
                    <div class="position-relative">
                        <input asp-for="DropOffAddress"
                               id="DropOffAddress"
                               class="form-control form-control-sm"
                               placeholder="Destination"
                               autocomplete="off"
                               value="Arlanda Airport (ARN), Stockholm-Arlanda, Sverige" />
                        <input asp-for="DropOffAddressPlaceId" type="hidden" id="DropOffAddressPlaceId" value="ChIJ_YMtw2OdX0YRM1xOfqKV-FI" />
                        <input asp-for="DropOffLatitude" type="hidden" id="DropOffAddressLatitude" value="59.6493928" />
                        <input asp-for="DropOffLongitude" type="hidden" id="DropOffAddressLongitude" value="17.9342942" />
                        <div id="DropOffAddress-suggestions"
                             class="address-suggestions list-group"
                             style="display: none;">
                        </div>
                    </div>
                    <span asp-validation-for="DropOffAddress" class="text-danger small"></span>
                </div>
            </div>

            <div class="col-12 mb-2 stop-field" id="optionalField1" style="display: none;">
                <label asp-for="FirstStop" class="form-label small">First Stop</label>
                <div class="position-relative">
                    <input asp-for="FirstStop"
                           id="FirstStop"
                           class="form-control form-control-sm"
                           placeholder="Street and number"
                           autocomplete="off" />
                    <input asp-for="FirstStopPlaceId" type="hidden" id="FirstStopPlaceId" />
                    <input asp-for="FirstStopLatitude" type="hidden" id="FirstStopLatitude" />
                    <input asp-for="FirstStopLongitude" type="hidden" id="FirstStopLongitude" />
                    <span asp-validation-for="FirstStop" class="text-danger small"></span>
                    <div id="FirstStop-suggestions"
                         class="address-suggestions list-group"
                         style="display: none;">
                    </div>
                </div>

            </div>
            <div class="col-12 mb-2 stop-field" id="optionalField2" style="display: none;">
                <label asp-for="SecStop" class="form-label small">Second Stop</label>
                <div class="position-relative">
                    <input asp-for="SecStop"
                           id="SecStop"
                           class="form-control form-control-sm"
                           placeholder="Street and number"
                           autocomplete="off" />
                    <input asp-for="SecStopPlaceId" type="hidden" id="SecStopPlaceId" />
                    <input asp-for="SecStopLatitude" type="hidden" id="SecStopLatitude" />
                    <input asp-for="SecStopLongitude" type="hidden" id="SecStopLongitude" />
                    <span asp-validation-for="SecStop" class="text-danger small"></span>
                    <div id="SecStop-suggestions"
                         class="address-suggestions list-group"
                         style="display: none;">
                    </div>
                </div>

            </div>
            <div class="mb-2">
                <button type="button" id="AddStopBtn" class="btn btn-secondary btn-sm ">Add stop</button>
            </div>

            <div class="mb-2" id="flightNumberField" style="display: none;">
                <label asp-for="Flightnumber" class="form-label small">Flight Number</label>
                <input asp-for="Flightnumber" class="form-control form-control-sm" placeholder="Required for pickup from Arlanda" />
                <span asp-validation-for="Flightnumber" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Comment" class="form-label small">Comments</label>
                <textarea asp-for="Comment" rows="3" class="form-control form-control-sm" placeholder="Additional information or requests..."></textarea>
                <span asp-validation-for="Comment" class="text-danger small"></span>
            </div>

            <div class="form-footer">
                <button type="submit" class="btn-submit btn-sm">
                    <span>Calculate price</span>
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <line x1="5" y1="12" x2="19" y2="12"></line>
                        <polyline points="12 5 19 12 12 19"></polyline>
                    </svg>
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script src="~/js/booking.js" asp-append-version="true"></script>
}
