@{
    ViewData["Title"] = "Contact";
}

<section class="contact-hero text-center">
    <div class="contact-hero-overlay">
        <h1 class="display-4 fw-bold">Contact Us</h1>
        <p class="lead">We're here for you - reach out anytime!</p>
    </div>
</section>

<section class="contact-section py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-lg-5">
                <div class="contact-info-card h-100">
                    <h2 class="fw-bold mb-4">Pegasus Transport</h2>
                    <p class="text-muted mb-4">
                        Your reliable partner for professional airport transfers.
                        We’re here to assist you with bookings, questions, and support.
                    </p>

                    <!-- Email -->
                    <div class="contact-info-item">
                        <div class="contact-icon">
                            <i class="fa-solid fa-envelope"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Email</h5>
                            <a href="mailto:info@pegasustransport.se">info@pegasustransport.se</a>
                        </div>
                    </div>

                    <!-- Phone -->
                    <div class="contact-info-item">
                        <div class="contact-icon">
                            <i class="fa-solid fa-phone"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Phone</h5>
                            <a href="tel:+46705400185">+46 70 540 01 85</a>
                        </div>
                    </div>

                    <!-- Address -->
                    <div class="contact-info-item">
                        <div class="contact-icon">
                            <i class="fa-solid fa-location-dot"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Address</h5>
                            <p class="mb-0">
                                Pegasus Transport AB<br>
                                Arlanda Airport Road 101<br>
                                190 45 Stockholm-Arlanda
                            </p>
                        </div>
                    </div>

                    <!-- Hours -->
                    <div class="contact-info-item">
                        <div class="contact-icon">
                            <i class="fa-solid fa-clock"></i>
                        </div>
                        <div>
                            <h5 class="mb-1">Support Hours</h5>
                            <p class="mb-0">
                                Every day: 08:00 – 20:00 (Swedish time)
                            </p>
                        </div>
                    </div>

                </div>
            </div>


            <div class="col-lg-7">
                <div class="contact-form-card">
                    <h2 class="fw-bold mb-4">Send a Message</h2>

                    <form action="https://api.web3forms.com/submit" method="POST" id="contactForm" novalidate>
                        <input type="hidden" name="access_key" value="0ca25366-c8bb-4715-aba7-a6e3b3f1a64a">
                        <input type="hidden" name="subject" value="New message from Pegasus Transport website">
                        <input type="hidden" name="from_name" value="Pegasus Transport Contact Form">

                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="name" class="form-label">Name *</label>
                                <input type="text" class="form-control contact-input" id="name" name="name" required minlength="2">
                                <div class="invalid-feedback">Please enter your name (at least 2 characters).</div>
                            </div>
                            <div class="col-md-6">
                                <label for="email" class="form-label">Email *</label>
                                <input type="email" class="form-control contact-input" id="email" name="email" required>
                                <div class="invalid-feedback">Please enter a valid email address.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="phone" class="form-label">Phone *</label>
                                <input type="tel" class="form-control contact-input" id="phone" name="phone" required>
                                <div class="invalid-feedback">Please enter a valid phone number.</div>
                            </div>
                            <div class="col-md-6">
                                <label for="subject" class="form-label">Subject</label>
                                <select class="form-select contact-input" id="subject" name="message_subject">
                                    <option value="">Select subject...</option>
                                    <option value="Booking">Booking</option>
                                    <option value="Question">General Question</option>
                                    <option value="Feedback">Feedback</option>
                                    <option value="Other">Other</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <label for="message" class="form-label">Message *</label>
                                <textarea class="form-control contact-input" id="message" name="message" rows="5" required minlength="10"></textarea>
                                <div class="invalid-feedback">Please enter a message (at least 10 characters).</div>
                            </div>
                            <div class="col-12">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="consent" name="consent" required>
                                    <label class="form-check-label" for="consent">
                                        I consent to my data being processed according to GDPR *
                                    </label>
                                    <div class="invalid-feedback">You must agree before submitting.</div>
                                </div>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn contact-submit-btn">
                                    <span class="btn-text">Send Message</span>
                                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                                        <path d="M15.854.146a.5.5 0 0 1 .11.54l-5.819 14.547a.75.75 0 0 1-1.329.124l-3.178-4.995L.643 7.184a.75.75 0 0 1 .124-1.33L15.314.037a.5.5 0 0 1 .54.11ZM6.636 10.07l2.761 4.338L14.13 2.576 6.636 10.07Zm6.787-8.201L1.591 6.602l4.339 2.76 7.494-7.493Z" />
                                    </svg>
                                </button>
                            </div>
                        </div>
                    </form>

                    <div id="result" class="mt-3"></div>
                </div>
            </div>
        </div>

        <div class="row mt-5">
            <div class="col-12">
                <div class="map-container">
                    <h2 class="fw-bold mb-4 text-center">Find Us at Chas Academy</h2>
                    <div class="map-wrapper">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d8079.544507915653!2d18.08167!3d59.29374!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x465f77e5a2dff0b7%3A0x8bc1b4a941b0eec!2sChas%20Academy!5e0!3m2!1sen!2sse!4v1700000000000!5m2!1sen!2sse"
                                width="100%"
                                height="450"
                                style="border:0;"
                                allowfullscreen=""
                                loading="lazy"
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script src="~/js/contact.js" asp-append-version="true"></script>
}